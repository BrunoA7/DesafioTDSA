@{
}

@model ClienteCrud.web.Models.Entities.Cliente

<h1>Edite o Cliente</h1>

@if (Model is null)
{
    <p>Não foi encontrado o cliente com este Id</p>
}
else{
    <form method="post">

    <div class="mt-3">
        <label class="form-label">Id Cliente</label>
        <input type="text" class="form-control" asp-for="CLI_ID" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="CLI_NOME" />
    </div>

    <div class="mt-3">
        <label class="form-label">Data de Nascimento</label>
        <input type="date" class="form-control" asp-for="CLI_DATANASCIMENTO" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Ativo" asp-for="CLI_ATIVO" />
        <label class="form-check-label" for="Ativo">Ativo</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Clientes">Deletar</button>


    </div>

   </form>
   }
   






